{
  "schemaVersion": 1,
  "id": "musicsubs",
  "version": "${version}",

  "name": "Music Subtitles",
  "description": "Shows the currently playing music in the subtitles",
  "authors": [
    "TheLastKumquat"
  ],

  "license": "LGPL-3.0-only",
  "icon": "assets/musicsubs/icon.png",

  "contact": {
    "homepage": "https://github.com/kumquat-ir/music-subs",
    "sources": "https://github.com/kumquat-ir/music-subs.git",
    "issues": "https://github.com/kumquat-ir/music-subs/issues"
  },

  "environment": "client",
  "entrypoints": {
    "client": [
      "com.github.kumquatir.musicsubs.MusicSubsMod"
    ]
  },
  "mixins": [
    "musicsubs.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric-resource-loader-v0": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  }
}
